<?xml version="1.0" encoding="UTF-8"?>
<config>
	<!-- Append custom simplebuttons with NAPVP styling to the existing ingameMenu window -->
	<append xpath="/windows/window[@name='ingameMenu']">
		<!-- Grid container for all custom simplebuttons - can be moved as a group -->
		<rect name="custom_news_grid" anchor="CenterTop" pos="0,0" depth="3" width="1920" height="1080">
			
			<rect name="custom_menu_header" anchor="TopLeft" pos="600,-100" depth="1" width="650" height="300" controller="NewsWindow" sources="https://community.thefunpimps.com/">
				<sprite depth="0" name="background" sprite="ui_game_header_fill" type="sliced" color="128,128,128,60" globalopacity="true" width="650" height="300" />
				<button depth="10" name="btnLink" style="hover,scroll,press" sprite="menu_empty" hoverscale="1" defaultcolor="0,0,0,1" disabledcolor="0,0,0,1" hovercolor="100,100,100,100" type="sliced" width="650" height="300" enabled="{has_link}" gamepad_selectable="{has_news}" />
				<label depth="2" name="caption" pos="330,-50" width="650" height="300" font_size="80" text="NORTH AMERICA PVP" color="139,0,0,255" justify="center" pivot="center" />
				<label depth="2" name="caption" pos="330,-100" width="650" height="300" font_size="24" text="NAPVP 7 Days to Die Server" color="207,177,60,255" justify="center" pivot="center" />
				<label depth="2" name="caption" pos="330,-130" width="650" height="300" font_size="24" text="Clickable links below" color="207,177,60,255" justify="center" pivot="center" />
			</rect>

			<rect name="custom_btnwebstoremenu" anchor="TopLeft" pos="250,-450" depth="1" width="650" height="150" controller="NewsWindow" sources="https://raw.githubusercontent.com/NAPVP/ESC_Menu_S3/main/ServerCommands.xml">
				<sprite depth="0" name="background" sprite="ui_game_header_fill" type="sliced" color="[darkGrey]" globalopacity="false" width="650" height="150" />
				<button depth="10" name="btnLink" style="hover,scroll,press" sprite="menu_empty" hoverscale="1" defaultcolor="0,0,0,1" disabledcolor="0,0,0,1" hovercolor="100,100,100,100" type="sliced" width="650" height="150" enabled="{has_link}" gamepad_selectable="{has_news}" />
				<label depth="2" name="caption" pos="330,-65" width="650" height="150" font_size="80" text="COMMANDS" color="139,0,0,255" justify="center" pivot="center" />
				<label depth="2" name="caption" pos="330,-115" width="650" height="150" font_size="28" text="Click To See The Commands List" color="207,177,60,255" justify="center" pivot="center" />
			</rect>

			<rect name="custom_btndiscordmenu" anchor="TopLeft" pos="900,-450" depth="1" width="650" height="150" controller="NewsWindow" sources="https://raw.githubusercontent.com/NAPVP/ESC_Menu_S3/main/DiscordLink.xml">
				<sprite depth="0" name="background" sprite="ui_game_header_fill" type="sliced" color="[darkGrey]" globalopacity="false" width="650" height="150" />
				<button depth="10" name="btnLink" style="hover,scroll,press" sprite="menu_empty" hoverscale="1" defaultcolor="0,0,0,1" disabledcolor="0,0,0,1" hovercolor="100,100,100,100" type="sliced" width="650" height="150" enabled="{has_link}" gamepad_selectable="{has_news}" />
				<label depth="2" name="caption" pos="320,-65" width="650" height="150" font_size="80" text="DISCORD" color="139,0,0,255" justify="center" pivot="center" />
				<label depth="2" name="caption" pos="320,-115" width="650" height="150" font_size="28" text="Click To See The NAPVP Discord" color="207,177,60,255" justify="center" pivot="center" />
			</rect>

			<rect name="custom_btnwebmapmenu" anchor="TopLeft" pos="250,-600" depth="1" width="650" height="150" controller="NewsWindow" sources="https://raw.githubusercontent.com/NAPVP/ESC_Menu_S3/main/OnlineMap.xml">
				<sprite depth="0" name="background" sprite="ui_game_header_fill" type="sliced" color="[darkGrey]" globalopacity="false" width="650" height="150" />
				<button depth="10" name="btnLink" style="hover,scroll,press" sprite="menu_empty" hoverscale="1" defaultcolor="0,0,0,1" disabledcolor="0,0,0,1" hovercolor="100,100,100,100" type="sliced" width="650" height="150" enabled="{has_link}" gamepad_selectable="{has_news}" />
				<label depth="2" name="caption" pos="320,-65" width="650" height="150" font_size="80" text="ONLINE MAP" color="139,0,0,255" justify="center" pivot="center" />
				<label depth="2" name="caption" pos="320,-115" width="650" height="150" font_size="28" text="Click To See The Live Map" color="207,177,60,255" justify="center" pivot="center" />

			</rect>

			<rect name="custom_btnvotemenu" anchor="TopLeft" pos="900,-600" depth="1" width="650" height="150" controller="NewsWindow" sources="https://raw.githubusercontent.com/NAPVP/ESC_Menu_S3/main/VoteLink.xml">
				<sprite depth="0" name="background" sprite="ui_game_header_fill" type="sliced" color="[darkGrey]" globalopacity="false" width="650" height="150" />
				<button depth="10" name="btnLink" style="hover,scroll,press" sprite="menu_empty" hoverscale="1" defaultcolor="0,0,0,1" disabledcolor="0,0,0,1" hovercolor="100,100,100,100" type="sliced" width="650" height="150" enabled="{has_link}" gamepad_selectable="{has_news}" />
				<label depth="2" name="caption" pos="330,-65" width="650" height="150" font_size="80" text="VOTE FOR SERVER" color="139,0,0,255" justify="center" pivot="center" />
				<label depth="2" name="caption" pos="330,-115" width="650" height="150" font_size="28" text="Click To Vote / Reward In Game After" color="207,177,60,255" justify="center" pivot="center" />
			</rect>
			
		</rect>
	</append>
</config>
